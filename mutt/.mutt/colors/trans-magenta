color body        brightmagenta   default  "[^ <]*:\/\/[^ >]*" # for URLs
color body        brightmagenta   default  "[A-Za-z0-9_\.\-]+@[A-Za-z0-9_\.\-]*[A-Za-z0-9_\.\-]+"

color quoted      magenta         default
color quoted1     brightmagenta   default
