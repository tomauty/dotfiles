# Colors you can use:
#
# white   -   brightwhite
# yellow  -  brightyellow
# magenta     -     brightmagenta
# magenta - brightmagenta
# blue    -    brightblue
# green   -   brightgreen
# black   -   brightblack


color normal      white        default
color attachment  magenta         default
color bold        brightwhite  default
color underline   default      magenta
color error       brightwhite  default
color indicator   black        magenta
color message     brightmagenta   default
color status      brightmagenta  magenta

color hdrdefault  magenta         default
#color header      brightmagenta   default  "^date: *"
color header      brightmagenta   default  "^from: *"
