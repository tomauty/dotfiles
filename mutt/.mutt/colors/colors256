#
#     object     foreground     backg.   RegExp
#
color header     color65        default  '^date:'
color header     color65        default  '^(to|from|b?cc|reply-to|x-label):'
color header     color101       default  '^subject:.*$'
color body       color94        default  "(((https?|ftp|gopher)://|(file|news|mailto):)[^\' <>\"]+|(www[0-9]?|web|w3)\\.)[^\' ,;<>\":]+"
color body       color29        default  "[a-z0-9._-]+@[a-z0-9._-]+[a-z]{2}"
color body       color55        default  "^gpg:.*"

color index      color242       default ~A      # All messages
