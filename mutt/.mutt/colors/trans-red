#color header      red         default  "^x-mailer: *"
#color header      red         default  "^user-agent: *"
#color header      red         default  "^x-operating-system: *"
color header      brightred   default  "^x-mailing-list: *"
#color header      red         default  "^in-reply-to: *"

color body        brightred   default  "[^ <]*:\/\/[^ >]*" # for URLs
color body        brightred   default  "[A-Za-z0-9_\.\-]+@[A-Za-z0-9_\.\-]*[A-Za-z0-9_\.\-]+"

color quoted      red         default
color quoted1     brightred   default
