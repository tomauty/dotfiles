# Colors you can use:
#
# white   -   brightwhite
# brightblack  -  brightbrightblack
# red     -     brightred
# magenta - brightmagenta
# blue    -    brightblue
# green   -   brightgreen
# black   -   brightblack


color normal      white        default
color attachment  red          default
color bold        brightwhite  default
color underline   default      red
color error       brightwhite  default
color indicator   default        red
color message     brightred    default
color status      black      red

color hdrdefault  red         default
#color header      brightred   default  "^date: *"
