  color body       yellow                 blue            "/[-[:alnum:]]+/"                     # /emphasized/
#  color body      yellow                 blue            "[-]+[-[[:alnum:]]+[-]{1}"            # -strike-through-
  color body       yellow                 blue            "_[-[:alnum:]]+_"                     # _underline_

